{
  "name": "mbuffa.github.io",
  "version": "1.0.0",
  "description": "This is my humble homepage built with [Zola](https://www.getzola.org/documentation/deployment/github-pages/).",
  "main": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "npx npm-watch",
    "watch": "npm run build",
    "build": "npx tailwindcss -i ./styles/main.css -o ./public/main.css --minify"
  },
  "watch": {
    "watch": {
      "patterns": [
        "styles/**/**",
        "templates/**/**"
      ],
      "extensions": "css,html",
      "quiet": true
    }
  },
  "author": "Maxime Buffa",
  "license": "",
  "dependencies": {
    "autoprefixer": "^10.4.13",
    "npm-watch": "^0.11.0",
    "tailwindcss": "^3.2.4"
  }
}
